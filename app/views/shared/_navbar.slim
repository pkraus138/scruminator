nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  a.navbar-brand href="#" Scruminator
  - if current_user
    button.navbar-toggler type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"
      span.navbar-toggler-icon

    div.collapse.navbar-collapse#navbarSupportedContent
      ul.navbar-nav.mr-auto
        li.nav-item.active
          a.nav-link href="#"
            | Home
            span.sr-only (current)
        li.nav-item.active
        - if current_user.admin
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" Admin
            div.dropdown-menu aria-labelledby="navbarDropdown"
              = link_to "Teams", teams_path, class: "dropdown-item"
      ul.navbar-nav.ml-auto
        li.nav-item.dropdown
          a.nav-link.dropdown-toggle href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
            = display_name_for(current_user)
            = image_tag avatar_url_for(current_user.email), class: "user-avatar ml-2"
          div.dropdown-menu aria-labelledby="userDropdown"
            = link_to destroy_user_session_path, method: :delete, class: "dropdown-item" do
              = fa_icon "sign-out", class: "mr-2"
              | Sign out
